# LocalBrain Environment Configuration
# Copy this file to .env and add your real API keys

# OpenAI Configuration
OPENAI_API_KEY=your-real-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com
OPENAI_CHAT_MODEL=o3
OPENAI_TTS_VOICE=maple

# Ollama Configuration (for offline mode)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# LocalBrain Configuration
DEFAULT_WAKE_WORD=Hey Brain
LOCALBRAIN_DOCS_URL=https://docs.localbrain.ai

# Security Settings
AUDIT_RETENTION_DAYS=90
REQUIRE_CONFIRMATION=true
SANDBOX_PLUGINS=true
MAX_FILE_SIZE_MB=100

# Database Configuration
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-here

# Optional: Enterprise SSO Configuration
# OIDC_CLIENT_ID=your-oidc-client-id
# OIDC_CLIENT_SECRET=your-oidc-client-secret
# OIDC_ISSUER_URL=https://your-identity-provider.com

# Optional: Crash Reporting (disabled by default)
# SENTRY_DSN=your-sentry-dsn-here
# ENABLE_TELEMETRY=false

# Development Settings
DEV_MODE=false
LOG_LEVEL=infoPORT=3000
PORT=3000
